@page "/Register"
@layout AppView.Components.Layout.EmptyLayout
@inject NavigationManager Navigation
@rendermode InteractiveServer

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <div class="mb-md-5 mt-md-4 pb-5">
                            <h2 class="fw-bold mb-2 text-uppercase">Đăng ký</h2>
                            <form asp-action="Register" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-outline form-white mb-4 text-start">
                                    <label asp-for="Username" class="control-label">Tài khoản</label>
                                    <input asp-for="Username" class="form-control" />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                                <div class="form-outline form-white mb-4 text-start">
                                    <label asp-for="Password" class="control-label">Mặt khẩu</label>
                                    <input asp-for="Password" class="form-control" type="password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-outline form-white mb-4 text-start">
                                    <label asp-for="ConfirmPassword" class="form-label">Xác nhận mật khẩu</label>
                                    <input asp-for="ConfirmPassword" class="form-control" type="password" required />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <input type="submit" value="Đăng ký" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                        <div>
                            <p class="mb-0">
                                Đăng nhập?
                                <a @onclick="DangNhap" class="text-white-50 fw-bold">Đăng nhập</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@code {
    private void DangNhap()
    {
        Navigation.NavigateTo("/Login");
    }
}
